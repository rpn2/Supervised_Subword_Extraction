# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{py,yml}]
max_line_length = 120

# Space indentation for Python
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# space indentation for YAML
[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# space indentation for JSON
[*.json]
indent_style = space
indent_size = 2
indent_char = ' '
